    <link href="~/Theme/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Theme/css/bootstrap-icons.css" rel="stylesheet">

    <link href="~/Theme/css/templatemo-kind-heart-charity.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />

    <script src="https://kit.fontawesome.com/22bd4fd29b.js" crossorigin="anonymous"></script>

</head>

<body id="section_1">

    <header class="site-header" style="background-color:#ee3908">
        <div class="container">
            <div class="row">

                <div class="col-lg-8 col-12 d-flex flex-wrap">
                    <p class="d-flex me-4 mb-0">
                        <i class="bi-geo-alt me-2"></i>
                        Factory 107 Kabokweni, Industrial
                    </p>

                    <p class="d-flex mb-0">
                        <i class="bi-envelope me-2"></i>

                        <a href="mailto:info@forek.co.za">
                            info@forek.co.za
                        </a>
                    </p>
                </div>

                <div class="col-lg-3 col-12 ms-auto d-lg-block d-none">
                    <ul class="social-icon">
                        <li class="social-icon-item">
                            <a href="https://twitter.com/forekinstitute" class="social-icon-link bi-twitter"></a>
                        </li>

                        <li class="social-icon-item">
                            <a href="https://www.facebook.com/ForekInstitute" class="social-icon-link bi-facebook"></a>
                        </li>

                        <li class="social-icon-item">
                            <a href="https://www.instagram.com/forekinstituteoftechnology/" class="social-icon-link bi-instagram"></a>
                        </li>

                        <li class="social-icon-item">
                            <a href="https://www.youtube.com/@@forekinstituteoftechnology2257" class="social-icon-link bi-youtube"></a>
                        </li>

                        <li class="social-icon-item">
                            <a href="https://www.forek.co.za" class="social-icon-link bi-globe"></a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg bg-light shadow-lg">
        <div class="container">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="~/Theme/images/yomslogo.jpg" class="logo img-fluid" alt="Yoms">
                <span style="color:#00008B">
                    Y  O  M  S
                    <small>Youth Opportunities Management System</small>
                </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

            
                        <li class="nav-item">
                            <a class="nav-link click-scroll" asp-action="StudentList" asp-controller="Student"><i class="fa fa-graduation-cap"></i> Profile</a>
                        </li>
                    

                    <li class="nav-item ms-3">
                        <a class="nav-link custom-btn custom-border-btn btn" asp-action="Logout" asp-controller="Auth"><i class="fa fa-sign-out"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        <section class="hero-section hero-section-full-height">
            <div class="container-fluid">
                <div class="row mt-1">

                    @RenderBody()
                    <partial name="_Notifications" />
                </div>
            </div>
        </section>
    </main>

    <script src="~/Theme/js/bootstrap.min.js"></script>
    <script src="~/Theme/js/jquery.sticky.js"></script>
